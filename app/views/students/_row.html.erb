<td>
  <input type="text" id="student-lname-<%= @student.id %>" placeholder="Last name" value=<%= @student.last_name %> />
</td>
<td>
  <input type="text" id="student-fname-<%= @student.id %>" placeholder="First name" value=<%= @student.first_name %> />
</td>
<td>
  <input type="number" id="student-age-<%= @student.id %>" placeholder="Age" value=<%= @student.age %> />
</td>
<td class="text-center">
  <form role="form" action="/students/ajax/<%= @student.id %>" data-remote="true" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="student[last_name]" id="student-lname-real-<%= @student.id %>" />
    <input type="hidden" name="student[first_name]" id="student-fname-real-<%= @student.id %>" />
    <input type="hidden" name="student[age]" id="student-age-real-<%= @student.id %>" />
    <input style="display: none" type="submit" name="commit" data-disable-with="submit" class="btn btn-info" id="student-submit-btn-<%= @student.age %>" />
    <button class="btn btn-info" onclick="extract(<%= @student.id %>)">Confirm</button>
  </form>
</td>
<td class="text-center">
  <%= link_to @student, method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete?' } do %>
    <i class="fas fa-minus-circle"></i>
  <% end %>
</td>