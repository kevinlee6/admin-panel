<% if user_signed_in? %>
  <h1>Welcome</h1>
  <p>Manage your educational platform.</p>
  <p>Available groups are:</p>
  <ul>
    <li>Courses</li>
    <li>Cohorts</li>
    <li>Instructors</li>
    <li>Students</li>
  </ul>
<% else %>
  <div class='demo-credentials'>
    <p>
      Demo info provided by default.
      <a href="https://github.com/kevinlee6/admin-panel">Github</a>
    </p>
  </div>
  <div id="landing">
    <h2>Manage your admin panel</h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "demo@email.com", value: 'demo@email.com' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", value: "password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-info" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>