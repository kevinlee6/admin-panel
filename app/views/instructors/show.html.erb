<div class="section-header">
  <h1>Instructor Info</h1>
</div>

<p>
  <strong>First name:</strong>
  <%= @instructor.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @instructor.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @instructor.age %>
</p>

<p>
  <strong>Salary:</strong>
    <%= number_to_currency(@instructor.salary, precision: 0) %>
</p>

<p>
  <strong>Education:</strong>
  <%= @instructor.education %>
</p>

<p>
  <strong>Cohort ID:</strong>
  <%= @instructor.cohort_id %>
</p>

<div class="buttons">
  <%= button_tag 'Edit', onclick: "location.href='#{edit_instructor_path(@instructor)}'", class: "btn btn-info" %>
  <%= button_tag 'Back', onclick: "location.href='#{instructors_path}'", class: "btn btn-info" %>
</div>